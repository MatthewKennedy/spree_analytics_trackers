<% if tracker = Spree::Tracker.current(:google_analytics) %>
<!-- Global site tag (gtag.js) - Google Analytics -->
  <script>
    gtag('event', 'checkout_progress', {
  <% if tracker = Spree::Tracker.current(:google_analytics) %> 'send_to': '<%= tracker.analytics_id %><% end %>',
      'ecomm_prodid': [<% @order.line_items.each do |line_item| %>'<%= j (line_item.sku.present? ? line_item.sku : line_item.variant_id.to_s) %>',<% end %>],
      'ecomm_pagetype': 'cart',
      'ecomm_totalvalue': '<%= @order.total %>',
      'items': [
          <%= render partial: 'spree/shared/trackers/google/google_add_items', locals: { order: @order } %>
          ]
    });
    gtag('event', 'set_checkout_option', {
      <% if tracker = Spree::Tracker.current(:google_analytics) %> 'send_to': '<%= tracker.analytics_id %><% end %>',
      'checkout_step': <%= (@order.checkout_steps.index(@order.state) + 1) %>,
    });
  </script>
<% end %>

<% if tracker = Spree::Tracker.current(:google_ads_account_number) && tracker = Spree::Tracker.current(:google_ads_conversion_label)%>
<!-- Event snippet for Example dynamic remarketing page -->
  <script>
    gtag('event', 'page_view', {
    <% if tracker = Spree::Tracker.current(:google_ads_account_number) %> 'send_to': 'AW-<%= tracker.analytics_id %><% end %>',
     'ecomm_prodid': [<% @order.line_items.each do |line_item| %>'<%= j (line_item.sku.present? ? line_item.sku : line_item.variant_id.to_s) %>',<% end %>],
     'ecomm_pagetype': 'cart',
     'ecomm_totalvalue': '<%= @order.total %>'
    });
  </script>
<% end %>
